{% extends 'admin/base.html.twig' %}

{% block title %}Edition d'un commentaire{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°{{ comment.id }}</h1>
        <div class="alert alert-info">
           <strong>Annonce liée :</strong> {{ comment.ad.title }}<br>
            <strong>Auteur :</strong> {{ comment.author.fullname }}<br>
            <strong>Date de création :</strong> {{ comment.createdAt | date('d/m/y') }}<br>
            <strong>Note donnée :</strong> {{ comment.rating }}
        </div>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button class="btn btn-info">
            <i class="fas fa-check"></i>
            Enregistrer les modifications</button>
        {{ form_end(form) }}
    </div>
{% endblock %}